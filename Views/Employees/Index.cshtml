                    @Html.DisplayFor(modelItem => item.employee.UserName)
                </td>
                <td>
                    @{
                       
                        List<string> myroles = new List<string>();
                    
                    
                        @if (item.employee.Roles.Count() == 1)
                        {
                            @foreach (var a in item.employee.Roles)
                            {
                                @Html.DisplayFor(modelItem => a.Role1) 

                            }

                        }
                        else
                        {
                            var mya = "";
                            @foreach (var a in item.employee.Roles)
                            {
                                var bb = a.Role1 + ", ";
                                myroles.Add(bb); 
                            }
                            @foreach (var a in myroles)
                            {
                                mya += a;
                            }
                            mya = mya.TrimEnd(' ');
                            mya = mya.TrimEnd(',');
                            @mya
                       
    
